{
  "extends": "@tonnant/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-native",
    "checkJs": false
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    "*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
